# Django Settings
SECRET_KEY=django-insecure-replace-this-with-a-secure-key
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Settings
# For local/docker (if not using DATABASE_URL)
DB_NAME=buskalo
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Production Database (Used by Render/Production)
# DATABASE_URL=postgres://user:password@host:port/dbname

# CORS Settings
CORS_ALLOW_ALL_ORIGINS=True
# CORS_ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app

# Cloudflare R2 / AWS S3 Credentials
# Get these from your Cloudflare Dashboard -> R2 -> Manage R2 API Tokens
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_STORAGE_BUCKET_NAME=your_bucket_name
AWS_S3_ENDPOINT_URL=https://your_account_id.r2.cloudflarestorage.com
# Optional: If you use a custom domain for R2
AWS_S3_CUSTOM_DOMAIN=your_custom_domain.r2.dev
